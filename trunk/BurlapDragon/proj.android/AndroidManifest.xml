                  android:configChanges="orientation">
        </activity>
        <activity android:name=".gameentry.GameEntryActivity" android:theme="@style/AppTheme" android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
