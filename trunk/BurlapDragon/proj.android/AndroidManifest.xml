        <activity android:name=".gameentry.helper.GameHelperActivity" android:theme="@style/AppTheme" android:screenOrientation="landscape"></activity>
        <activity android:name=".gameentry.bigmap.ModeTollGateBigMapSelectActivity" android:theme="@style/AppTheme" android:screenOrientation="landscape"></activity>
        <activity android:name=".gameentry.smallmap.ModeTollGateSmallMapSelectActivity" android:theme="@style/AppTheme" android:screenOrientation="landscape"></activity>
        <activity android:name=".gameentry.recommend.RecommendDownListActivity" android:theme="@style/AppTheme" android:screenOrientation="portrait"></activity>
