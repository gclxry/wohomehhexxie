<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GameEnterActiveLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".GameEntryActivity" >

    <ImageView
        android:id="@+id/GameEntryActivityBackground"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:contentDescription="@string/desc"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:id="@+id/GEA_BaseLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:contentDescription="@id/GEA_BaseLayout"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/GEA_TopLayout"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.33" >

            <ImageButton
                android:id="@+id/sinaWeiboBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="top|left"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="false"
                android:contentDescription="@string/desc"
                android:cropToPadding="false"
                android:onClick="onClickButtonSinaWeibo"
                android:scaleType="center"
                android:src="@drawable/sina_weibo_btn_selector" />

            <ImageButton
                android:id="@+id/txWeiboBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignBaseline="@id/sinaWeiboBtn"
                android:layout_alignParentTop="true"
                android:layout_gravity="top|left"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/sinaWeiboBtn"
                android:contentDescription="@string/desc"
                android:src="@android:drawable/btn_star" />

            <ImageButton
                android:id="@+id/recommendBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignBaseline="@id/sinaWeiboBtn"
                android:layout_alignParentTop="true"
                android:layout_gravity="top|left"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/txWeiboBtn"
                android:contentDescription="@string/desc"
                android:src="@drawable/ic_launcher" />

            <ImageButton
                android:id="@+id/loginBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/discussBtn"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/rechargeBtn"
                android:contentDescription="@string/desc"
                android:src="@drawable/ic_launcher" />

            <ImageButton
                android:id="@+id/rechargeBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignTop="@id/discussBtn"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@id/discussBtn"
                android:contentDescription="@string/desc"
                android:src="@drawable/ic_launcher" />

            <ImageButton
                android:id="@+id/discussBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/desc"
                android:src="@drawable/ic_launcher" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/GEA_MidLayout"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.33" >

            <ImageButton
                android:id="@+id/settingBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="100dp"
                android:contentDescription="@string/desc"
                android:src="@drawable/ic_launcher" />

            <ImageButton
                android:id="@+id/helpBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="false"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_marginRight="100dp"
                android:contentDescription="@string/desc"
                android:src="@drawable/ic_launcher" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/GEA_BottomLayout"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.33" >

            <ImageButton
                android:id="@+id/tollGateModeBtn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="false"
                android:layout_centerVertical="true"
                android:layout_marginLeft="100dp"
                android:contentDescription="@string/desc"
                android:onClick="onClickButtonTollGateMode"
                android:src="@drawable/ic_launcher" />

            <ImageButton
                android:id="@+id/riskModeBtn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="false"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="100dp"
                android:contentDescription="@string/desc"
                android:src="@drawable/ic_launcher" />

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>